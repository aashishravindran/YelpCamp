<% include ../partials/header %>

<div class="container"> 
<div class="row">
     <h1 style="text-align: center;">Edit <%= campground.name %></h1>
<div class="form-dec">
    <form action= "/campground/<%=campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label> Title</label>
              <input type="text" class="form-control" name="campground[name]" value ="<%=campground.name%>"placeholder="New Campground"></input>  
        </div>
        
        
          <div class="form-group">
            <label> Price</label>
              <input type="text" class="form-control" name="campground[price]" type= "number"value ="<%=campground.price%>" min="0.01" step="0.03"></input>  
        </div>
     
        
        
      <div class="form-group">
          <label> Image</label>
     <input type="text" class="form-control" name="campground[image]"   value ="<%=campground.image%>" placeholder="Image Url"></input>
     </div>
     
     <div class="form-group">
         <label> Description</label>
     <textarea class="form-control" name="campground[description]"   placeholder="description"><%=campground.description%></textarea>
     </div>
     
     
     
      <div class="form-group">
     <button class="btn btn-lg btn-default btn-block btn-primary"> Submit</button>
     </div>
     
     
     </form>
     <a href="/campground"> Go Back</a>
</div>

     

</div>

</div>

     <% include ../partials/footer %>